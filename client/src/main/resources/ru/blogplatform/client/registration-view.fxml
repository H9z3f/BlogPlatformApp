<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19"
            fx:controller="ru.blogplatform.client.controllers.RegistrationController">
    <children>
        <GridPane gridLinesVisible="true" prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                    <children>
                        <Label prefHeight="25.0" text="Registration">
                            <font>
                                <Font name="Arial Bold" size="24.0"/>
                            </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <Label prefHeight="25.0" text="Already have an account?">
                                    <font>
                                        <Font name="Arial" size="14.0"/>
                                    </font>
                                </Label>
                                <Hyperlink onAction="#changeWindow" prefHeight="25.0" text="Login">
                                    <font>
                                        <Font name="Arial" size="14.0"/>
                                    </font>
                                </Hyperlink>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" GridPane.columnIndex="1">
                    <children>
                        <Label alignment="CENTER" prefHeight="25.0" prefWidth="300.0" text="Fill out the form">
                            <font>
                                <Font name="Arial Bold" size="18.0"/>
                            </font>
                        </Label>
                        <Label prefHeight="25.0" prefWidth="300.0" text="Enter your full name">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="fullNameField" prefHeight="25.0" prefWidth="300.0">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </TextField>
                        <Label prefHeight="25.0" prefWidth="300.0" text="Enter your email">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="emailField" prefHeight="25.0" prefWidth="300.0">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </TextField>
                        <Label prefHeight="25.0" prefWidth="300.0" text="Enter your password">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </Label>
                        <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="300.0">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </PasswordField>
                        <Label fx:id="error" prefHeight="25.0" prefWidth="300.0" textFill="RED">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#submitForm" prefHeight="25.0" prefWidth="300.0"
                                text="Register">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets left="50.0" right="50.0"/>
                    </padding>
                </VBox>
            </children>
        </GridPane>
    </children>
</AnchorPane>
